<?xml version="1.0"?>
<extension key="com.joineryhq.stepw" type="module">
  <file>stepw</file>
  <name>Stepwise Workflow</name>
  <description>Provides for configuration of workflows consisting of CMS pages and CiviCRM FormBuilder forms.</description>
  <license>GPL-3.0</license>
  <authors>
    <author>
      <name>Allen Shaw</name>
      <email>allen@JoineryHQ.com</email>
      <role>Maintainer</role>
    </author>
  </authors>
  <urls>
    <url desc="Main Extension Page">https://github.com/JoineryHQ/com.joineryhq.stepw</url>
    <url desc="Documentation">https://github.com/JoineryHQ/com.joineryhq.stepw</url>
    <url desc="Support">https://github.com/JoineryHQ/com.joineryhq.stepw/issues</url>
    <url desc="Licensing">https://www.gnu.org/licenses/gpl-3.0.html</url>
  </urls>
  <releaseDate>2025-07-30</releaseDate>
  <version>0.0.2</version>
  <develStage>alpha</develStage>
  <compatibility>
    <ver>5.81</ver>
  </compatibility>
  <comments>This is a new, undeveloped module</comments>
  <classloader>
    <psr0 prefix="CRM_" path="."/>
    <psr4 prefix="Civi\" path="Civi"/>
  </classloader>
  <civix>
    <namespace>CRM/Stepw</namespace>
    <format>25.01.1</format>
    <angularModule>stepwAfform</angularModule>
  </civix>
  <mixins>
    <mixin>mgd-php@1.0.0</mixin>
    <mixin>setting-php@1.0.0</mixin>
    <mixin>smarty@1.0.3</mixin>
    <mixin>menu-xml@1.0.0</mixin>
    <mixin>ang-php@1.0.0</mixin>
    <mixin>entity-types-php@2.0.0</mixin>
  </mixins>
  <upgrader>CiviMix\Schema\Stepw\AutomaticUpgrader</upgrader>
</extension>
